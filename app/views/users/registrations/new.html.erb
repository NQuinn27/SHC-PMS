<div class="embed_form">
  <h2 class="login_header">Sign up</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true , label: false, placeholder: 'Email' %>
      <%= f.input :password, required: false, label: false, placeholder: "Password: #{@minimum_password_length} characters minimum" %>
      <%= f.input :password_confirmation, required: false, label: false, placeholder: 'Password Confirmation' %>
      <%= f.button :submit, "SIGN UP", :class => "loginButton" %>
      <div class="form-actions">
        <br>
        <%= render "users/shared/links"  %>
      </div>
    </div>
  <% end %>
</div>
