<p id="notice"><%= notice %></p>

<h1>Patient Conditions</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Doctor</th>
      <th>Reported</th>
      <th>Cured</th>
      <th>Notes</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patient_conditions.each do |patient_condition| %>
      <tr>
        <td><%= patient_condition.patient %></td>
        <td><%= patient_condition.doctor %></td>
        <td><%= patient_condition.reported %></td>
        <td><%= patient_condition.cured %></td>
        <td><%= patient_condition.notes %></td>
        <td><%= patient_condition.condition %></td>
        <td><%= link_to 'Show', patient_condition %></td>
        <td><%= link_to 'Edit', edit_patient_condition_path(patient_condition) %></td>
        <td><%= link_to 'Destroy', patient_condition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

