<% if @presenter.current_conditions.count > 0 %>
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-12">
        <h1>Current Conditions</h1>
        <table class="table">
          <thead class="posts_head">
            <tr>
              <th>
                Code
              </th>
              <th>
                Description
              </th>
              <th>
                Additional
              </th>
              <th>
                Reported
              </th>
              <th>
                Notes
              </th>
              <th>
                Reporting Doctor
              </th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody class="posts_body">
            <% @presenter.current_conditions.each do |condition| %>
            <tr>
              <td><%= condition.icd10.code %></td>
              <td><%= condition.icd10.description %></td>
              <td><%= condition.icd10.additional %></td>
              <td><%= condition.reported %></td>
              <td><%= condition.notes %></td>
              <td><%= condition.doctor.first_name + " " + condition.doctor.last_name %></td>
              <td><a class="btn btn-large btn-default" href="<%= request.base_url %>/patient_condition/<%= condition.id %>/cure">Mark Cured</a></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<% end %>
