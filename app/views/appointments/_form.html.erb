<%= simple_form_for(@appointment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.input :notes %>
  </div>
  <%= hidden_field "appointment", "doctor_id", "value" => @appointment.doctor_id %>
  <%= hidden_field "appointment", "patient_id", "value" => @appointment.patient_id %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
