<%= flash_messages %>
<div id="content_head">
  <div id="ch-title">
    <h1><%= @doctor.first_name.titleize %> <%= @doctor.last_name.titleize %></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="col-md-3 col-lg-3 "> <img alt="User Pic" src="https://cdn1.iconfinder.com/data/icons/user-pictures/101/malecostume-512.png" class="img-circle img-responsive"> </div>
    <div class=" col-md-9 col-lg-9 ">
      <table class="table">
        <tbody>
          <tr>
            <td>
              <strong>Qualifications</strong>
            </td>
            <td><%= @doctor.qualifications %></td>
          </tr>

          <tr>
            <td>
              <strong>Hospital</strong>
            </td>
            <td>
              <%= @doctor.hospital %>
            </td>
          </tr>

          <tr>
            <td>
              <strong>Office Phone</strong>
            </td>
            <td>
              <%= @doctor.phone_office %>
            </td>
          </tr>

          <tr>
            <td>
              <strong>Mobile Phone</strong>
            </td>
            <td>
              <%= @doctor.phone_mobile %>
            </td>
          </tr>

          <tr>
            <td>
              <strong>Date of Birth</strong>
            </td>
            <td>
              <%= @doctor.date_of_birth %>
            </td>
          </tr>

        </tbody>
      </table>
    </div>
    <div class="panel-footer">
      <%= link_to "<span class=\"glyphicon glyphicon-edit\"></span>".html_safe, edit_doctor_path(@doctor) %>
      <%= link_to "<span class=\"glyphicon glyphicon-trash\"></span>".html_safe, doctor_path(@doctor), data: {:confirm => 'Are you sure?'}, :method => :delete %>
    </div>
  </div>
</div>
