<% if @presenter.future_appointments %>
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-12">
        <h1>Future Appointments</h1>
        <table class="table">
          <thead class="posts_head">
            <tr>
              <th>Doctor</th>
              <th>Date</th>
              <th>Notes</th>
              <th colspan="3"></th>
            </tr>
          </thead>
         <tbody class="posts_body">
           <% @presenter.future_appointments.each do |appointment| %>
             <tr>
               <td><%= appointment.doctor.first_name %></td>
               <td><%= appointment.date %></td>
               <td><%= appointment.notes %></td>
               <td><%= link_to 'Show', appointment %></td>
               <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
               <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
             </tr>
           <% end %>
         </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<% end %>
